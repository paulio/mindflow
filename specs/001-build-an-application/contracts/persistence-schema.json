{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "mindflow.persistence.schema.v1",
  "title": "MindflowPersistenceV1",
  "type": "object",
  "required": ["graph", "nodes", "edges"],
  "properties": {
    "graph": {
      "type": "object",
      "required": ["id", "name", "created", "lastModified", "lastOpened", "schemaVersion"],
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "name": {"type": "string", "minLength": 1, "maxLength": 80},
        "created": {"type": "string", "format": "date-time"},
        "lastModified": {"type": "string", "format": "date-time"},
        "lastOpened": {"type": "string", "format": "date-time"},
        "schemaVersion": {"type": "integer", "minimum": 1},
        "settings": {
          "type": "object",
          "properties": {
            "autoLoadLast": {"type": "boolean"}
          },
          "additionalProperties": false
        },
        "viewport": {
          "type": "object",
          "properties": {
            "x": {"type": "number"},
            "y": {"type": "number"},
            "zoom": {"type": "number", "minimum": 0.05, "maximum": 10}
          },
          "required": ["x","y","zoom"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "graphId", "text", "x", "y", "created", "lastModified"],
        "properties": {
          "id": {"type": "string"},
          "graphId": {"type": "string"},
          "text": {"type": "string", "maxLength": 255},
          "x": {"type": "number"},
          "y": {"type": "number"},
          "created": {"type": "string", "format": "date-time"},
          "lastModified": {"type": "string", "format": "date-time"},
          "nodeKind": {"type": "string", "enum": ["thought","note","rect"]},
          "bgColor": {"type": "string"},
          "textColor": {"type": "string"},
          "frontFlag": {"type": "boolean"},
          "width": {"type": "number"},
          "height": {"type": "number"},
          "textAlign": {"type": "string", "enum": ["left","center","right"]},
          "textVAlign": {"type": "string", "enum": ["top","middle","bottom"]},
          "fontFamily": {"type": "string"},
          "fontSize": {"type": "number", "minimum": 1, "maximum": 256},
          "fontWeight": {"anyOf": [ {"type": "string"}, {"type": "number"} ]},
          "italic": {"type": "boolean"},
          "underline": {"type": "boolean"},
          "highlight": {"type": "boolean"},
          "backgroundOpacity": {"type": "number", "minimum": 0, "maximum": 100},
          "overflowMode": {"type": "string", "enum": ["truncate","auto-resize","scroll"]},
          "hideShapeWhenUnselected": {"type": "boolean"},
          "maxWidth": {"type": "number"},
          "maxHeight": {"type": "number"}
        },
        "additionalProperties": false
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "graphId", "sourceNodeId", "targetNodeId", "created"],
        "properties": {
          "id": {"type": "string"},
          "graphId": {"type": "string"},
          "sourceNodeId": {"type": "string"},
          "targetNodeId": {"type": "string"},
          "created": {"type": "string", "format": "date-time"},
          "undirected": {"type": "boolean", "const": true}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
