{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Azure Static Web Apps Entra ID Profile",
  "type": "object",
  "required": ["clientPrincipal"],
  "properties": {
    "clientPrincipal": {
      "type": "object",
      "required": ["identityProvider", "userId", "userDetails", "userRoles", "claims"],
      "properties": {
        "identityProvider": {
          "type": "string",
          "const": "aad"
        },
        "userId": {
          "type": "string",
          "description": "Entra ID subject identifier"
        },
        "userDetails": {
          "type": "string",
          "description": "Display name supplied by Entra ID"
        },
        "userRoles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Role claims passed through Easy Auth"
        },
        "claims": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["typ", "val"],
            "properties": {
              "typ": { "type": "string" },
              "val": { "type": "string" }
            }
          }
        }
      }
    }
  }
}
